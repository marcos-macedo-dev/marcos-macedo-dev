{
  "fpsLimit": 60,
  "retina_detect": true,
  "background": { "color": { "value": "transparent" } },
  "particles": {
    "number": { "value": 80, "density": { "enable": true, "value_area": 800 } },
    "color": { "value": ["#ffffff", "#ff6b6b", "#4ecdc4", "#45b7d1", "#96ceb4"] },
    "shape": {
      "type": ["circle", "triangle", "polygon"],
      "options": {
        "polygon": { "sides": 6 },
        "triangle": {}
      }
    },
    "opacity": {
      "value": 0.4,
      "random": true,
      "anim": { "enable": true, "speed": 1, "opacity_min": 0.1, "sync": false }
    },
    "size": {
      "value": 4,
      "random": true,
      "anim": { "enable": true, "speed": 2, "size_min": 1, "sync": false }
    },
    "links": {
      "enable": true,
      "distance": 180,
      "color": "#ffffff",
      "opacity": 0.25,
      "width": 1.5,
      "shadow": { "enable": true, "color": "#ffffff", "blur": 5 }
    },
    "move": {
      "enable": true,
      "speed": 2.5,
      "direction": "none",
      "random": true,
      "straight": false,
      "outModes": "bounce",
      "attract": { "enable": true, "rotateX": 600, "rotateY": 1200 }
    }
  },
  "interactivity": {
    "detect_on": "window",
    "events": {
      "onhover": { "enable": true, "mode": ["grab", "bubble"] },
      "onclick": { "enable": true, "mode": ["push", "repulse"] },
      "resize": true
    },
    "modes": {
      "grab": { "distance": 200, "links": { "opacity": 0.6 } },
      "bubble": { "distance": 250, "size": 8, "duration": 2, "opacity": 0.8, "speed": 3 },
      "repulse": { "distance": 150, "duration": 0.4 },
      "push": { "quantity": 6 },
      "remove": { "quantity": 3 }
    }
  }
}
